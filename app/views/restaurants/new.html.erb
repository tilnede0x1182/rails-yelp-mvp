<h1>Ajouter un Restaurant</h1>

<% if @restaurant.errors.any? %>
  <div class="alert alert-danger">
    <h2>Erreurs :</h2>
    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @restaurant, local: true do |form| %>
  <div>
    <%= form.label :name, "Nom" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :address, "Adresse" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :phone_number, "Téléphone" %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :category, "Catégorie" %>
    <%= form.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
  </div>

  <div>
    <%= form.submit "Créer", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Retour", restaurants_path, class: "btn btn-secondary" %>
