<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title"><%= @restaurant.name %></h1>
      <p><strong>Adresse :</strong> <%= @restaurant.address %></p>
      <p><strong>Téléphone :</strong> <%= @restaurant.phone_number %></p>
      <p><strong>Catégorie :</strong> <%= @restaurant.category.capitalize %></p>
    </div>
  </div>

  <h2 class="mt-4">Avis</h2>
  <% if @restaurant.reviews.any? %>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item">
          <strong>Note :</strong>
          <span class="text-warning"><%= "⭐" * review.rating %></span>
          <p><%= review.content %></p>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>Aucun avis pour ce restaurant.</p>
  <% end %>

  <div class="mt-3">
    <%= link_to "Ajouter un avis", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
    <%= link_to "Retour à la liste", restaurants_path, class: "btn btn-secondary" %>
  </div>
</div>
