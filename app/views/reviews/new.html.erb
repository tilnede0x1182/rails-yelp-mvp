<h1>Ajouter un avis pour <%= @restaurant.name %></h1>

<% if @review.errors.any? %>
  <div class="alert alert-danger">
    <h2>Erreurs :</h2>
    <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @review, url: restaurant_reviews_path(@restaurant), local: true do |form| %>
  <div>
    <%= form.label :content, "Commentaire" %>
    <%= form.text_area :content, rows: 3 %>
  </div>

  <div>
    <%= form.label :rating, "Note" %>
    <%= form.number_field :rating, in: 0..5, step: 1 %>
  </div>

  <div>
    <%= form.submit "Ajouter l'avis", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Retour au restaurant", restaurant_path(@restaurant), class: "btn btn-secondary" %>
